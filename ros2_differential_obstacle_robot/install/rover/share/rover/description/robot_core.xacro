<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rover">
    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>   

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material> 

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>
    
    <link name="chassis">
        <visual>
            <geometry>
                <box size=".8 0.7 0.1"/>
            </geometry>
            <material name="orange"/>
        </visual>

        <collision>
            <geometry>
                <box size=".8 0.7 0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="2" x="0.7" y="0.8" z="0.1">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/Orange</material>
    </gazebo>

    <joint name="wheel_front_right_joint" type="continuous">
        <origin xyz="0.20 0.4 0.0" rpy="1.571 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="wheel_front_right"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="wheel_front_right">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
            <material name="black"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="2" length="0.1" radius="0.15">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
	</link>

    <gazebo reference="wheel_front_right">
        <material>Gazebo/Black</material>
    </gazebo>

	<joint name="wheel_front_left_joint" type="continuous">
        <origin xyz="0.20 -0.4 0.0" rpy="1.571 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="wheel_front_left"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="wheel_front_left">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="2" length="0.1" radius="0.15">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="wheel_front_left">
        <material>Gazebo/Black</material>
    </gazebo>

    <joint name="wheel_back_right_joint" type="continuous">
        <origin xyz="-0.20 0.4 0.0" rpy="1.571 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="wheel_back_right"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="wheel_back_right">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="2" length="0.1" radius="0.15">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
	</link>

    <gazebo reference="wheel_back_right">
        <material>Gazebo/Black</material>
    </gazebo>


	<joint name="wheel_back_left_joint" type="continuous">
        <origin xyz="-0.20 -0.4 0.0" rpy="1.571 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="wheel_back_left"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="wheel_back_left">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="2" length="0.1" radius="0.15">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="wheel_back_left">
        <material>Gazebo/Black</material>
    </gazebo> 
</robot>
