<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rover">
    
    <link name="base_link"></link>

    <joint name="base_link_joint" type="fixed">
        <origin xyz="0.0 0.0 0.1" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="chassis_link"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>

    <link name="chassis_link">
        <visual>
            <geometry>
                <box size="0.8 0.7 0.2"/>
            </geometry>
        </visual>

        <collision>
            <geometry>
                <box size="0.8 0.7 0.2"/>
            </geometry>
        </collision>
    </link>

    <joint name="wheel_front_right_joint" type="continuous">
        <origin xyz="0.15 0.4 0.0" rpy="1.57 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel_front_right_link"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="wheel_front_right_link">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
        </collision>
    </link>

    <joint name="wheel_front_left_joint_joint" type="continuous">
        <origin xyz="0.15 -0.4 0.0" rpy="1.57 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel_front_left_link"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="wheel_front_left_link">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.15"/>
            </geometry>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.15" length="0.15"/>
            </geometry>
        </collision>
    </link>

    <joint name="caster_cylinder_joint_joint" type="fixed">
        <origin xyz="-0.3 0.0 -0.1"/>
        <parent link="chassis_link"/>
        <child link="caster_cylinder_link"/>
    </joint>

    <link name="caster_cylinder_link">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.2"/>
            </geometry>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.2"/>
            </geometry>
        </collision>
    </link>

    <joint name="caster_joint_joint" type="fixed">
        <origin xyz="0.0 0.0 -0.1"/>
        <parent link="caster_cylinder_link"/>
        <child link="caster_wheel_link"/>
    </joint>

    <link name="caster_wheel_link">
        <visual>
            <geometry>
                <sphere  radius="0.05"/>
            </geometry>
        </visual>

        <collision>
            <geometry>
                <sphere  radius="0.05"/>
            </geometry>
        </collision>
    </link>

    <joint name="lidar_joint" type="fixed">
        <origin xyz="0.0 0.0 0.1"/>
        <parent link="chassis_link"/>
        <child link="lidar_link"/>
    </joint>

    <link name="lidar_link">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.2"/>
            </geometry>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.15" length="0.2"/>
            </geometry>
        </collision>
    </link>

</robot>