<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="diff_robot">

    <!-- <xacro:include filename="inertial_macros.xacro"/> -->

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material> 

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK -->
    <link name="base_link"></link>

    <!-- BASE FOOTPRINT JOINT -->
    <!-- <joint name="base_footprint_joint" type="fixed">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="base_footprint_link"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint> -->

    <!-- BASE FOOTPRINT LINK -->
    <!-- <link name="base_footprint_link"></link> -->

    <!-- BASE JOINT -->
    <joint name="chassis_joint" type="fixed">
        <origin xyz="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="chassis_link"/>
    </joint>
        
    <!-- CHASSIS LINK -->
    <link name="chassis_link">
        <visual>
            <origin xyz="0.095 0.0 0.045" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.19 0.11 0.055"/>
            </geometry>
            <material name="orange"/>
        </visual>

        <collision>
            <geometry>
                <box size="0.19 0.11 0.055"/>
            </geometry>
        </collision>
        <!-- <xacro:inertial_box mass="0.1" x="0.19" y="0.11" z="0.055">
            <origin xyz="0.0 0.0 0.045" rpy="0 0 0"/>
        </xacro:inertial_box> -->
    </link>

    <!-- <gazebo reference="chassis_link">
        <material>Gazebo/Orange</material>
    </gazebo> -->

    <!-- RIGHT WHEEL JOINT -->
    <joint name="right_wheel_joint" type="continuous">
        <origin xyz="-0.0956 0.07 0.0" rpy="1.5708.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <!-- RIGHT WHEEL LINK -->
    <link name="right_wheel_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.0325" length="0.025"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <geometry>
                <box size="0.19 0.11 0.055"/>
            </geometry>
        </collision>
        <!-- <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.0325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder> -->
    </link>

    <!-- <gazebo reference="right_wheel_link">
        <material>Gazebo/White</material>
    </gazebo> -->

    <!-- LEFT WHEEL JOINT -->
    <joint name="left_wheel_joint" type="continuous">
        <origin xyz="-0.0956 -0.07 0.0" rpy="1.5708.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>
    
    <!-- LEFT WHEEL LINK -->
    <link name="left_wheel_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.0325" length="0.025"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <geometry>
                <box size="0.19 0.11 0.055"/>
            </geometry>
        </collision>
        <!-- <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.0325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder> -->
    </link>

    <!-- <gazebo reference="left_wheel_link">
        <material>Gazebo/White</material>
    </gazebo> -->

     <!-- CAMERA JOINT -->
     <joint name="camera_joint" type="fixed">
        <origin xyz="0.085 0.0 0.11" rpy="0.0 0.0 0.0"/>
        <parent link="chassis_link"/>
        <child link="camera_link"/>
    </joint>

    <!-- CAMERA LINK -->
    <link name="camera_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.015 0.04 0.08"/>
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <box size="0.0 0.0 0.0"/>
            </geometry>
        </collision>
    </link>

    <joint name="camera_optical_joint" type="fixed">
        <parent link="camera_link"/>
        <child link="camera_link_optical"/>
        <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
    </joint>

    <link name="camera_link_optical"></link>

    <!-- LIDAR CASE JOINT -->
    <joint name="lidar_case_joint" type="fixed">
    <origin xyz="-0.03 0.0 0.11" rpy="0.0 0.0 0.0"/>
    <parent link="chassis_link"/>
    <child link="lidar_case_link"/>
    </joint>

    <!-- LIDAR CASE LINK -->
    <link name="lidar_case_link">
    <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <geometry>
            <box size="0.085 0.09 0.1"/>
        </geometry>
        <material name="red"/>
    </visual>

    <collision>
        <geometry>
            <box size="0.0 0.0 0.0"/>
        </geometry>
    </collision>
    <!-- <xacro:inertial_box mass="0.1" x="0.085" y="0.09" z="0.1">
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    </xacro:inertial_box> -->
    </link>

    <!-- <gazebo reference="lidar_case_link">
        <material>Gazebo/Red</material>
    </gazebo> -->

     <!-- LIDAR  JOINT -->
    <joint name="lidar_joint" type="fixed">
    <origin xyz="0.0 0.0 0.06" rpy="0.0 0.0 0.0"/>
    <parent link="lidar_case_link"/>
    <child link="lidar_link"/>
    </joint>

     <!-- LIDAR LINK -->
     <link name="lidar_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.0175" length="0.0175"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0175" length="0.0175"/>
            </geometry>
        </collision>
        <!-- <xacro:inertial_cylinder mass="0.1" length="0.0175" radius="0.0175">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder> -->
    </link>

    <!-- <gazebo reference="lidar_link">
        <material>Gazebo/Blue</material>
    </gazebo> -->

    <!-- CASTER HOLDER JOINT -->
    <joint name="caster_holder_joint" type="fixed">
        <origin xyz="0.060 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="chassis_link"/>
        <child link="caster_holder_link"/>
    </joint>

    <!-- CASTER HOLDER LINK -->
    <link name="caster_holder_link">
    <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <geometry>
            <cylinder radius="0.0175" length="0.040"/>
        </geometry>
        <material name="white"/>
    </visual>

    <collision>
        <geometry>
            <cylinder radius="0.0175" length="0.0175"/>
        </geometry>
    </collision>
    <!-- <xacro:inertial_cylinder mass="0.1" length="0.0175" radius="0.0175">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder> -->
    </link>

    <!-- <gazebo reference="caster_holder_link">
        <material>Gazebo/white</material>
    </gazebo> -->

     <!-- CASTER BALL JOINT -->
    <joint name="caster_ball_joint" type="continuous">
    <origin xyz="0.060 0.0 -0.020" rpy="0.0 0.0 0.0"/>
    <parent link="chassis_link"/>
    <child link="caster_link"/>
    </joint>

    <!-- CASTER BALL LINK -->
    <link name="caster_link">
    <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <geometry>
            <sphere radius="0.0125"/>
        </geometry>
        <material name="white"/>
    </visual>

    <collision>
        <geometry>
            <sphere radius="0.0125"/>
        </geometry>
    </collision>
    <!-- <xacro:inertial_sphere mass="0.1" radius="0.0125">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_sphere> -->
    </link>

